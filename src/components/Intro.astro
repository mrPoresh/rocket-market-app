<intro-box class="w-full flex flex-col items-start mt-28 mb-10 p-4 gap-4 rounded-xl border-4 border-skin-accent">
    <div class="title-text text-h1 text-skin-white p-4 bg-skin-accent rounded-xl border-4 border-skin-accent">Buttons</div>
    <div class="btn-container">
        <Button id={ButtonType.Event} buttonType={ButtonType.Event} size={ButtonSize.Large} style={ButtonStyle.Accent} title={title} titleStyle={ButtonTitleStyle.Large}/>
        <Button id={ButtonType.Event} buttonType={ButtonType.Event} size={ButtonSize.Medium} style={ButtonStyle.Accent} title={title} titleStyle={ButtonTitleStyle.Medium}/>
        <Button id={ButtonType.Event} buttonType={ButtonType.Event} size={ButtonSize.Small} style={ButtonStyle.Accent} title={title} titleStyle={ButtonTitleStyle.Small}/>
    </div>
    <div class="btn-container">
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Large} style={ButtonStyle.Primary} title={title} titleStyle={ButtonTitleStyle.Large}/>
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Medium} style={ButtonStyle.Primary} title={title} titleStyle={ButtonTitleStyle.Medium}/>
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Small} style={ButtonStyle.Primary} title={title} titleStyle={ButtonTitleStyle.Small}/>
    </div>
    <div class="btn-container bg-skin-accent">
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Large} style={ButtonStyle.Default} title={title} titleStyle={ButtonTitleStyle.Large}/>
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Medium} style={ButtonStyle.Default} title={title} titleStyle={ButtonTitleStyle.Medium}/>
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Small} style={ButtonStyle.Default} title={title} titleStyle={ButtonTitleStyle.Small}/>
    </div>
    <div class="btn-container bg-skin-accent">
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Large} style={ButtonStyle.Warn} title={title} titleStyle={ButtonTitleStyle.Large}/>
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Medium} style={ButtonStyle.Warn} title={title} titleStyle={ButtonTitleStyle.Medium}/>
        <Button id={ButtonType.Link} buttonType={ButtonType.Event} size={ButtonSize.Small} style={ButtonStyle.Warn} title={title} titleStyle={ButtonTitleStyle.Small}/>
