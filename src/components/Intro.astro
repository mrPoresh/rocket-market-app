---
    import { ButtonSize, ButtonType, ButtonStyle, ButtonTitleStyle, ButtonsGroup } from "@types";

    import Button from "@components/Btn.astro"; 
    import ButtonGroup from "@components/BtnGroup.astro";

    
    const title = 'Button';

    const buttonsGroup: ButtonsGroup = {
        direction: 'row',
        buttonsGroup: [
            {
                id: 'event-1',
                buttonType: ButtonType.Event,
                size: ButtonSize.Large,
                style: ButtonStyle.Accent,
                title: 'Ev Lg Ac',
                titleStyle: ButtonTitleStyle.Large
            },
            {
                id: 'event-2',
                buttonType: ButtonType.Event,
                size: ButtonSize.Medium,
                style: ButtonStyle.Primary,
                title: 'Ev Md Pr',
                titleStyle: ButtonTitleStyle.Medium
            },
            {
                id: 'event-3',
                buttonType: ButtonType.Event,
                size: ButtonSize.Small,
                style: ButtonStyle.Warn,
                title: 'Ev Sm',
                titleStyle: ButtonTitleStyle.Small
            },
        ]
    };

